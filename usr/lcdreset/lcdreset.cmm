#include <stdio.hmm>
#include <syslib.hmm>
#include <crt0.hmm>
#include "util.hmm"
#define  N 128

char[] initComm = { '\x40', '\xa0', '\xc8', '\xa6',
                    '\xa2', '\x2f', '\xf8', '\x00',
                    '\x27', '\x81', '\x10', '\xac',
                    '\x00', '\xaf', '\xff' };          // 0xff=EOF

char[] locateComm = { '\xb0',   // page address
                      '\x10',   // column address Hi = 0x00
                      '\x04',   // column address Lo = 0x04
                      '\xff'};  // EOF

char[] zero = array(N);

public int main(int argc, char[][] argv) {
  _out(0x18, 0xfc);                   // リセット解除
  sleep(1);                           // 1ms 待つ
  spiWriteLcdCom(initComm);
  for (int i=0; i<N; i=i+2) {
    zero[i]   = '\xaa';
    zero[i+1] = '\x55';
  }
  for (int i=0; i<8; i=i+1) {
    locateComm[0] = chr(0xb0 | i);    // page address
    spiWriteLcdCom(locateComm);
    spiWriteLcdDat(zero, N);
  }
  return 0;
}
